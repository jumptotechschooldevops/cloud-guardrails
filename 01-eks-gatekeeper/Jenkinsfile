pipeline {
    agent {
        docker {
            image 'alpine:3.19'
            args '-u root'
        }
    }

    options {
        timestamps()
        disableConcurrentBuilds()
    }

    triggers {
        githubPush()
    }

    environment {
        CONFTEST_VERSION = '0.56.0'
    }

    stages {

        stage('Install Dependencies') {
            steps {
                sh '''
                apk add --no-cache \
                  bash \
                  curl \
                  tar \
                  ca-certificates

                curl -L https://github.com/open-policy-agent/conftest/releases/download/v${CONFTEST_VERSION}/conftest_${CONFTEST_VERSION}_Linux_x86_64.tar.gz \
                  | tar xz

                chmod +x conftest
                mv conftest /usr/local/bin/conftest

                conftest --version
                '''
            }
        }

        stage('Run Gatekeeper Policy Tests') {
            steps {
                dir('01-eks-gatekeeper') {
                    sh '''
                    echo "Running Conftest policy checks..."

                    conftest test tests \
                      --policy policies_backup
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "✅ Policy checks PASSED"
        }
        failure {
            echo "❌ Policy checks FAILED"
        }
        always {
            cleanWs()
        }
    }
}

