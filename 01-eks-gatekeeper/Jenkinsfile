pipeline {
    agent any

    environment {
        CONTEST_VERSION = "0.56.0"
        PATH = "${env.WORKSPACE}:${env.PATH}"
    }

    options {
        timestamps()
        disableConcurrentBuilds()
    }

    triggers {
        githubPush()
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Conftest') {
            steps {
                sh '''
                echo "Installing conftest locally (no sudo)..."

                curl -L https://github.com/open-policy-agent/conftest/releases/download/v${CONTEST_VERSION}/conftest_${CONTEST_VERSION}_Linux_x86_64.tar.gz \
                  | tar xz

                chmod +x conftest
                mv conftest $WORKSPACE/conftest

                conftest --version
                '''
            }
        }

        stage('Run Policy Tests') {
            steps {
                dir('01-eks-gatekeeper') {
                    sh '''
                    echo "Running conftest against Kubernetes manifests..."

                    conftest test tests \
                      --policy policies_backup
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "✅ Policy checks passed"
        }
        failure {
            echo "❌ Policy checks failed"
        }
        always {
            cleanWs()
        }
    }
}

